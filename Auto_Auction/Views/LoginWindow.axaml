<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Auto_Auction.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Auto_Auction.Views.LoginWindow"
        x:DataType="vm:LoginWindowViewModel"
        Title="Auto_Auction">

    <Design.DataContext>
      
        <vm:LoginWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <StackPanel Spacing="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Login" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox  Width="200" CornerRadius="5" Padding="5">
                Username:   
                <TextBlock/>
                <TextBox  Width="200" CornerRadius="5" Padding="5">Password:<TextBox/>  
                    <TextBlock/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Not registered? "/>
                        <Button Content="Create User" LinkStyle="True" Margin="5,0,0,0"/>
                    </StackPanel>
                    <Button Content="Login" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>