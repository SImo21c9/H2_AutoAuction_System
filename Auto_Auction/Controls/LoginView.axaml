<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Auto_Auction.Controls.LoginView"
             xmlns:vm="clr-namespace:Auto_Auction.ViewModels"
             x:DataType="vm:LoginWindowViewModel">
    
    <StackPanel Spacing="10" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Login" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="Username:"/>
        <TextBox Width="200" CornerRadius="5" Padding="5" x:Name="UsernameBox" Text="{Binding Username}"/>
        <TextBlock Text="Password:"/>
        <TextBox Width="200" CornerRadius="5" Padding="5" PasswordChar="*" x:Name="PasswordBox" Text="{Binding Password}" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Not registered? "/>
            <Button Content="Create User" Margin="5,0,0,0" Command="{Binding OnCreateUser}"/>
        </StackPanel>
        <Button Content="Login" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,10,0,0" Name="LoginButton" Command="{Binding OnLoginClick}"/>
    </StackPanel>
</UserControl>
